{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "ES2015",
    "newLine": "LF",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "typeRoots": []
  },
  "exclude": [
    "node_modules",
    "dist",
    "templates",
    "examples"
  ]
}
